-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{class: ("hilite" if @sort_column == "title")}= link_to "Movie Title", :sort_by=> :title, id: :movie_title_header
      %th{class:("hilite" if @sort_column == "rating")}= link_to "Rating", :sort_by=> :rating, id: :rating_header
      %th{class:("hilite" if @sort_column == "release_date")}= link_to "Release Date", :sort_by=> :release_date, id: :date_header
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
